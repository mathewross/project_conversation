<tr class="bg-white border-b border-gray-200 hover:bg-gray-50">
  <td class="px-6 py-4"><%= project.name %></td>
  <td class="px-6 py-4"><%= project.status %></td>
  <td class="px-6 py-4">
    <% if project.users.include? current_user %>
      <%= link_to 'View', project_path(project), class: 'inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 border border-blue-700 rounded' %>
    <% else %>
      <%= link_to 'Join', project_join_path(project_id: project.id), class: 'inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 border border-blue-700 rounded'  %>
    <% end %>
    <%= link_to 'Edit', edit_project_path(project), class: 'inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 border border-blue-700 rounded'  %>
    <div style="display:inline-block;">
      <%= button_to "Delete", project_path(project), form: { data: { turbo_confirm: "Are you sure?" } }, method: :delete, class: 'bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 border border-red-700 rounded' %>
    </div>
  </td>
</tr>