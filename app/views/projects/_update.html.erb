<div class="max-w-2xl mx-auto px-4 mt-5">
  <article class="p-6 text-base bg-white rounded-lg dark:bg-gray-900">
    <footer class="flex justify-between items-center mb-2">
      <div class="flex items-center">
        <p class="inline-flex items-center mr-3 text-sm text-gray-900 dark:text-white font-semibold"><%= update.user.email %></p>
        <p class="text-sm text-gray-600 dark:text-gray-400"><time><%= update.created_at.strftime('%Y-%m-%d %H:%M') %></time></p>
      </div>
    </footer>
    <p class="text-gray-500 dark:text-gray-400"><%= update.message %></p>
    <div class="flex items-center mt-4 space-x-4">
      <%= link_to "Reply", new_reply_path(project_id: @project.id, comment_id: update.id), data: { turbo_frame: 'modal' }, class: 'flex items-center text-sm text-gray-500 hover:underline font-medium' %>
    </div>
  </article>
  <% if update.type == 'Comment' %>
    <div id="replies-<%=update.id %>">
      <% update.replies.each do |reply| %>
        <%= render 'replies/reply', reply: reply %>
      <% end %>
    </div>
  <% end %>
</div>