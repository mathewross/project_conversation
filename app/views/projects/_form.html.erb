<%= form_for(object, :html => {class: 'relative max-w-md mx-auto'}) do |form| %>
  <%= render(partial: "layouts/errors", locals: {object: object}) %>

  <div class="relative z-0 w-full mb-5 group">
    <%= form.label "Project Name", class: "peer-focus:font-medium text-sm text-gray-500 dark:text-gray-400" %>
    <%= form.text_field (:name), autofocus: true, class: "block py-2.5 px-0 w-full text-sm bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer", required: true %>
  </div>
  <div class="relative z-0 w-full mb-5 group">
    <%= form.label "Description", class: "peer-focus:font-medium text-sm text-gray-500 dark:text-gray-400" %>
    <%= form.text_field (:description), autofocus: true, class: "block py-2.5 px-0 w-full text-sm bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer", required: true %>
  </div>
  <div class="relative z-0 w-full mb-5 group">
    <%= form.select :status, options_for_select(Project.statuses.map { |key, value|
      [key.capitalize, key]
    }, @project.status), id: 'status_select'%>
  </div>
  <%= form.submit (submit_text), class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
  <%= link_to 'Back', projects_path, class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
<% end %>